@model Models.Script
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/IDEIndex.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.9/ace.js"></script>
    <script src="~/js/FormValidate.js"></script>
</head>
@{
    ViewBag.Title = "Index";
}
<html>
<body>
    <section>
        @if (ViewBag.Situation < 1) {
            <div class="container">
                <div class="row">
                    <div class="col-4 justify-content-center">
                        <textarea id="editorContent" class="textEditorArea" name="editorContent" form="saveScript">@Model.Code</textarea>
                        <p>You can now edit the script: </p>
                        <br />
                        <form id='saveScript' name='saveScript' action='@Url.Action("SaveScript", "IDE")' method="post">
                            <table width="80%" class="table" cellpadding="4" align="left">
                                <tr>
                                    <td><label>ID:</label></td>
                                    <td><input class="inputCustom" type="text" name="id" id="id" value="@Model.Id" readonly /></td>
                                </tr>
                                <tr>
                                    <td><label>Script name:</label></td>
                                    <td><input class="inputCustom" type="text" name="scriptName" id="scriptName" value="@Model.Name" /></td>
                                </tr>
                                <tr>
                                    <td><label>Language:</label></td>
                                    <td><input class="inputCustom" type="text" name="language" id="language" value="@Model.Language" readonly></td>
                                </tr>
                                <tr>
                                    <td><label>Version:</label></td>
                                    <td><input class="inputCustom" type="text" name="version" id="version" value="@Model.ScriptVersion" /></td>
                                </tr>
                                <tr>
                                    <td><label>Date created:</label></td>
                                    <td><input class="inputCustom" type="text" name="dateCreated" id="dateCreated" value="@Model.DateCreated" readonly></td>
                                </tr>
                                <tr>
                                    <td><label>Author:</label></td>
                                    <td><input class="inputCustom" type="text" name="author" id="author" value="@Model.Author" /></td>
                                </tr>
                                <tr>
                                    <td><label>Last modified:</label></td>
                                    <td><input class="inputCustom" type="text" name="lastModified" id="lastModified" value="@Model.LastModified"></td>
                                </tr>
                            </table>
                            <br />
                            <p>Save changes to this script: <input type="submit" id="submit" value="Save" class="buttonCustom btn-success shadow-none" onclick="if ( ! validate()) return false;" language="javascript" /></p>
                        </form>
                    </div>
                    <div class="col-8" id="editor">
                        @Model.Code
                    </div>
                    <script src="~/js/AceEditorEdit.js"></script>
                </div>
            </div>
        } else if (ViewBag.Situation == 1) {

            <h2>Something went wrong, can not find and open the script! </h2>
        }
    </section>
</body>
</html>
